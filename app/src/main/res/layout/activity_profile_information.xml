<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.ProfileInformationText"
    tools:context="com.example.amprime.firebaseauth.ProfileInformationActivity">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:background="@drawable/pi_bg" />

                <RelativeLayout
                    android:id="@+id/image_container"
                    android:layout_width="80dp"

                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"

                    android:layout_marginTop="110dp"
                    android:background="@android:color/transparent">


                    <ImageView
                        android:id="@+id/PI_profile_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:elevation="3dp"


                        android:src="@mipmap/ic_user_xxxhdpi" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/data_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/image_container"

                    >

                    <!--User Name View-->
                    <LinearLayout
                        android:id="@+id/Name_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/username_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/colorAccent"
                            android:padding="5dp"
                            android:text="Full Name : "
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/PI_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            tools:text="Alensh" />

                    </LinearLayout>


                    <View
                        android:id="@+id/name_divider"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/Name_linear_layout"
                        android:layout_margin="5dp"
                        android:background="#c0c0c0" />
                    <!--*****************************-->
                    <!--Email Address Linear Layout-->
                    <LinearLayout
                        android:id="@+id/email_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_divider"
                        android:elevation="20dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/email_id_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/colorAccent"
                            android:padding="5dp"
                            android:text="Email Id : "
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/PI_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:scrollbars="horizontal"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            tools:text="alensh@gmail.com" />

                    </LinearLayout>


                    <View
                        android:id="@+id/email_divider"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/email_linear_layout"
                        android:layout_margin="5dp"
                        android:background="#c0c0c0" />
                    <!--***************************************************-->
                    <!--Designation Linear Layout-->
                    <LinearLayout
                        android:id="@+id/Designation_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_divider"
                        android:elevation="20dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/designation_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/colorAccent"
                            android:padding="5dp"
                            android:text="Designation : "
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/PI_Designation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            tools:text="Admin" />

                    </LinearLayout>


                    <View
                        android:id="@+id/designation_divider"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/Designation_linear_layout"
                        android:layout_margin="5dp"
                        android:background="#c0c0c0" />
                    <!--***************************************************-->

                    <!--Address Linear Layout-->
                    <LinearLayout
                        android:id="@+id/Address_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/designation_divider"
                        android:elevation="20dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/address_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/colorAccent"
                            android:padding="5dp"
                            android:text="Address : "
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/PI_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            tools:text="Default" />

                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/Address_linear_layout"
                        android:layout_margin="5dp"
                        android:background="#c0c0c0" />
                    <!--***************************************************-->


                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>>
    </LinearLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_main" />




</android.support.v4.widget.DrawerLayout>